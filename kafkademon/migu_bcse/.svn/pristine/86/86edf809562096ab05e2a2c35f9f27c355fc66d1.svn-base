<div class="add-oa-modal" discard-modal>
  <div class="modal-header">
    <span>{{isAdd?"添加用户":"编辑用户"}}</span>
    <button type="button" class="close" ng-click="cancel()">&times;</button>
  </div>
  <form class="modal-body form-horizontal" name="userForm">
    <div class="form-group">
      <label class="col-sm-2 text-right">用户名</label>
      <div class="col-sm-10">
        <span ng-if="!isAdd">{{info.userName}}</span>
        <input ng-if="isAdd" type="text" id="userInput" class="form-control" placeholder="用户名" ng-model="info.userName" required>
      </div>
      <div class="col-xs-12">
        <p class="col-md-offset-2 col-xs-offset-3 text-tip"><span>用户名支持邮箱格式</span><span class="red" ng-if="tipShow">用户名已存在！</span></p>
      </div>
    </div>
    <div class="form-group">
      <label for="userOaInput" class="col-sm-2 control-label">关联OA名</label>
      <div class="col-sm-10">
        <input type="text" id="userOaInput" class="form-control" placeholder="OA账户名" ng-model="info.oaUserName" maxlength="50" ng-pattern="/^[^\u4E00-\u9FA5]{0,}$/">
      </div>
    </div>
    <p class="col-sm-offset-2 text-tip"><span>不支持中文格式，长度限制50</span></p>
  </form>
  <div class="modal-footer">
    <button class="btn confirm" ng-click="saveUser(info,cancel)" ng-disabled="userForm.$invalid||userForm.$pristine||submitting">{{submitting?"正在保存...":"保存"}}</button>
    <button type="reset" class="btn cancel" ng-click="cancel()" ng-disabled="submitting">取消</button>
  </div>
</div>
